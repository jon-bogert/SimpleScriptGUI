{
  "name": "simplescript",
  "version": "1.0.0",
  "description": "A basic film script writing software",
  "license": "MIT",
  "author": "Jon Bogert",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac --universal"
  },
    "build": {
    "appId": "com.eXomorph.SimpleScript",
    "productName": "SimpleScript",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.bin",
      "!dist"
    ],
    "asar": true,

    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "icon": "build/icons/",
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12"
  }
}
